
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web</title>
    <style>
        h1.titulo { font-size: 0.8rem;} 
        main{
            width: 50%;
            display: flex;;
            flex-direction: column;
            gap:2px;
            margin: 7 auto;
            padding: 100px;
            align-items:center;
            
        }
         
        form{
            display:flex;
            flex-direction: column;
            gap:10px;
            border: 3px solid #000;
            padding:15px;
            background-color: darkred;
            width: 500px;
            border-radius:1cm;
            
            
        }
        .nome{
            color:azure;
            font-size: 26px;
            border-color: #000;
        }
        
        .selector{
            color: rgb(0, 0, 0);
            background-color: rgba(255, 217, 2, 0.575);
            border-color: #000;
        }

    </style>
</head>
<body>
   <main>
    
    <h1>Inversor de Nomes</h1>
    <form class="nome" class="nome-com-borda">
        <label for="Nome">Nome</label>
        <input type="text" id="#" name="#">
        <button class="selector">Enviar</button> 
    </form>
    <h1 class="resultado">Nome invertido</h1>
   </main> 
    <script>
        const form = document.querySelector("form");
        const input = document.querySelector("input");
        const resultado = document.querySelector(".resultado");

        form.addEventListener("submit", function(event) {
            event.preventDefault();
            const nome = input.value;
            const nomeInvertido = nome.split("").reverse().join("");
            resultado.textContent = `Nome invertido: ${nomeInvertido}`;
        });
        
    </script>
</body>
</html>
